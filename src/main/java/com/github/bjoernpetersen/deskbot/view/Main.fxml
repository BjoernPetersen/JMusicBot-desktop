<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefWidth="800"
  fx:controller="com.github.bjoernpetersen.deskbot.view.MainController">
  <left>
    <TabPane tabClosingPolicy="UNAVAILABLE">
      <Tab text="PlaybackFactory">
        <ListView fx:id="playbackFactoryList"/>
      </Tab>
      <Tab text="Provider">
        <ListView fx:id="providerList"/>
      </Tab>
      <Tab text="Suggester">
        <ListView fx:id="suggesterList"/>
      </Tab>
    </TabPane>
  </left>
  <center>
    <StackPane fx:id="centerPane">
      <VBox spacing="5">
        <HBox alignment="CENTER">
          <Label fx:id="pluginName" text="General"
            style="-fx-font-weight: bold; -fx-font-size: 160%"/>
          <VBox HBox.hgrow="ALWAYS"/>
          <Label fx:id="pluginType" style="-fx-font-style: italic"/>
        </HBox>
        <Button fx:id="closeButton" text="Close" visible="false"/>
        <StackPane fx:id="pluginConfig" VBox.vgrow="ALWAYS"/>
      </VBox>
      <padding>
        <Insets left="5" top="5" bottom="5" right="5"/>
      </padding>
    </StackPane>
  </center>
  <bottom>
    <StackPane>
      <AnchorPane>
        <Button fx:id="startButton" text="START" AnchorPane.bottomAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
      </AnchorPane>
    </StackPane>
  </bottom>

</BorderPane>
