<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.CheckListView?>
<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="net.bjoernpetersen.deskbot.view.DefaultPermissionConfig"
  fx:id="root"
  prefHeight="400.0" prefWidth="600.0">
  <top>
    <Label text="%description.defaultPermissionConfig"/>
  </top>
  <center>
    <CheckListView fx:id="permissionList" disable="true"/>
  </center>
  <bottom>
    <ButtonBar>
      <buttons>
        <Button text="%action.close" onAction="#close" cancelButton="true" defaultButton="true"
          ButtonBar.buttonData="OK_DONE"/>
        <Button text="%action.reset" onAction="#reset" ButtonBar.buttonData="APPLY"/>
      </buttons>
    </ButtonBar>
  </bottom>
</BorderPane>
