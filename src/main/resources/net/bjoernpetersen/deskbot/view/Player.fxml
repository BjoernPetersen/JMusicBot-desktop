<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:id="root"
  prefWidth="800.0" prefHeight="600.0">
  <left>
    <ListView fx:id="queueList"/>
  </left>
  <bottom>
    <ButtonBar>
      <buttons>
        <Button onAction="#manageUsers"
          text="%action.userManagement"
          ButtonBar.buttonData="LEFT"/>
        <Button onAction="#close" text="%action.close" ButtonBar.buttonData="RIGHT"/>
        <Button onAction="#exit" text="%action.exit" ButtonBar.buttonData="RIGHT"/>
      </buttons>
    </ButtonBar>
  </bottom>
  <center>
    <StackPane>
      <padding>
        <Insets topRightBottomLeft="50"/>
      </padding>
      <GridPane alignment="CENTER">
        <ImageView fx:id="albumArtView"
          fitWidth="280" fitHeight="280" preserveRatio="true"/>

        <AnchorPane GridPane.rowIndex="1" GridPane.halignment="CENTER">
          <ToggleButton fx:id="pauseButton" onAction="#playPause"
            AnchorPane.leftAnchor="40" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="10"
            style="-fx-border-style: solid inside; -fx-border-width: 2; -fx-border-radius: 5; -fx-border-color: grey;">
            <background>
              <Background/>
            </background>
            <graphic>
              <ImageView fx:id="playPauseImage" fitWidth="70" fitHeight="70" preserveRatio="true">
                <Image smooth="true" url="/net/bjoernpetersen/deskbot/view/icons/pause.png"/>
              </ImageView>
            </graphic>
          </ToggleButton>

          <Button fx:id="skipButton" onAction="#skip"
            AnchorPane.rightAnchor="40" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="10"
            style="-fx-border-style: solid inside; -fx-border-width: 2; -fx-border-radius: 5; -fx-border-color: grey;">
            <background>
              <Background/>
            </background>
            <graphic>
              <ImageView fitWidth="70" fitHeight="70">
                <Image smooth="true" url="/net/bjoernpetersen/deskbot/view/icons/skip.png"/>
              </ImageView>
            </graphic>
          </Button>
        </AnchorPane>

        <Label fx:id="title" GridPane.rowIndex="2" GridPane.halignment="CENTER"
          style="-fx-font-size: 25; -fx-font-weight: bold;"/>
        <Label fx:id="description" GridPane.rowIndex="3" GridPane.halignment="CENTER"
          style="-fx-font-size: 25;"/>
        <Label fx:id="duration" GridPane.rowIndex="4" GridPane.halignment="CENTER"
          style="-fx-font-size: 25; -fx-font-style: italic;"/>
        <Label fx:id="enqueuer" GridPane.rowIndex="5" GridPane.halignment="CENTER"
          style="-fx-font-size: 25;"/>
      </GridPane>
    </StackPane>

  </center>

</BorderPane>
